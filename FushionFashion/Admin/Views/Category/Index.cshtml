@model IEnumerable<BusinessObject.Dtos.Category.CategoryViewModel>
@{
    Layout = "_Layout";
}
<!-- DataTales Example -->
<div>
    <div>
        <nav class="breadcrumb breadcrumb-dash">
            <a class="breadcrumb-item" asp-controller="Admin" asp-action="Index"><i class="fas fa-fw fa-home"></i>Home</a>
            <span class="breadcrumb-item active">Manage Accounts</span>
        </nav>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 class="m-0 font-weight-bold text-primary">Manage Accounts</h2>
    </div>
    <div class="col-lg-10" style="padding-top: 15px;">
        <div class="d-md-flex" style="padding-left: 8px;">
            <div class="col-lg-12 text-right">
                <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Create">
                    <i class="fas fa-fw fa-plus-circle"></i>
                    <span>Create Category</span>
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>CategoryName</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @if ((int)item.Status == 1)
                                    {
                                        <div>
                                            <div class="fas fa-fw fa-circle" style="color: green;"></div>
                                            <div style="display: inline-block;">Avaiilable</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <div class="fas fa-fw fa-circle" style="color: red;"></div>
                                            <div style="display: inline-block;">Unavaiilable</div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Details" asp-route-id="@item.Id">View</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
